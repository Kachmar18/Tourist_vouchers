       <Label layoutX="328.0" layoutY="14.0" prefHeight="36.0" prefWidth="339.0" style="-fx-font-size: 25;" styleClass="header-label" text="Створення нового акаунта">
         <font>
            <Font size="45.0" />
         </font></Label>
     <TextField fx:id="txtUsernameSignUp" layoutX="436.0" layoutY="78.0" prefHeight="37.0" prefWidth="529.0" />
      <PasswordField fx:id="txtPasswordSignUp" layoutX="436.0" layoutY="229.0" prefHeight="37.0" prefWidth="529.0" />
      <Label layoutX="50.0" layoutY="84.0" prefHeight="25.0" prefWidth="236.0" text="Введіть ПІБ" />
      <Label layoutX="50.0" layoutY="235.0" prefHeight="25.0" prefWidth="300.0" text="Введіть пароль" />
      <Label layoutX="50.0" layoutY="156.0" prefHeight="25.0" prefWidth="294.0" text="Введіть номер телефону" />
      <TextField fx:id="txtPhone" layoutX="436.0" layoutY="150.0" prefHeight="37.0" prefWidth="529.0" />
      <Button contentDisplay="RIGHT" layoutX="445.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleCreateAccount" prefHeight="57.0" prefWidth="530.0" text="Створити акаунт">
