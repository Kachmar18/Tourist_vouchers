          <ImageView fitHeight="77.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <Image url="@Icons/info_icon.png"/>
          </ImageView>
      </graphic></Button>

      <Pane fx:id="logInPane" layoutX="-1.0" layoutY="75.0" prefHeight="481.0" prefWidth="994.0">
      <Label layoutX="421.0" layoutY="14.0" style="-fx-font-size: 25;" styleClass="header-label" text="Авторизація">
         <font>
            <Font size="42.0" />
         </font></Label>
      <TextField fx:id="txtUsername" layoutX="422.0" layoutY="125.0" prefHeight="38.0" prefWidth="546.0" />
      <PasswordField fx:id="txtPassword" layoutX="422.0" layoutY="197.0" prefHeight="38.0" prefWidth="546.0" />
      <Label layoutX="53.0" layoutY="129.0" prefHeight="30.0" prefWidth="346.0" text="Введіть ім'я" />
      <Label layoutX="53.0" layoutY="204.0" prefHeight="25.0" prefWidth="346.0" text="Введіть пароль" />
      <Button contentDisplay="RIGHT" layoutX="448.0" layoutY="379.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="57.0" prefWidth="530.0" text="Увійти">
