             <ImageView fitHeight="41.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                 <Image url="@Icons/enter.png"/>
             </ImageView>
         </graphic></Button>
      <Button contentDisplay="RIGHT" layoutX="13.0" layoutY="379.0" onAction="#switchToSignUpPane" prefHeight="57.0" prefWidth="370.0" text="Зареєструватися">
         <graphic>
             <ImageView fitHeight="33.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                 <Image url="@Icons/edit.png"/>
             </ImageView>
         </graphic></Button>
   </Pane>

