<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #dcf5fb;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tourist_vouchers.v17_tourist_vouchers.controller.LoginController">
   <Button layoutX="14.0" layoutY="594.0" mnemonicParsing="false" onAction="#handleInfoApp" prefHeight="41.0" prefWidth="169.0" text="Про програму">
