         <graphic>
             <ImageView fitHeight="41.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                 <Image url="@Icons/enter.png"/>
             </ImageView>
         </graphic></Button>
      <VBox alignment="CENTER" layoutX="50" layoutY="80" prefWidth="300" spacing="10" />
      <Label fx:id="lblSpecialPassword" layoutX="50.0" layoutY="305.0" prefHeight="25.0" prefWidth="300.0" text="Пароль-запрошення" />
      <PasswordField fx:id="txtSpecialPassword" layoutX="436.0" layoutY="299.0" prefHeight="37.0" prefWidth="529.0" />
   </Pane>
   <Button fx:id="btnUserType" graphicTextGap="1.0" layoutX="780.0" layoutY="14.0" mnemonicParsing="false" onAction="#changeTypeUser" prefHeight="42.0" prefWidth="205.0" text="Користувач">
      <graphic>
         <ImageView fx:id="imgUserType" fitHeight="39.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true" />
      </graphic></Button>
</AnchorPane>
