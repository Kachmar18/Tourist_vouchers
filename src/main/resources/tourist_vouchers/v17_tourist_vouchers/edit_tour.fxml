         <ImageView fitHeight="31.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Icons/Return_icon.png" />
            </image>
         </ImageView>
      </graphic></Button>
     <Button fx:id="btnSave" contentDisplay="RIGHT" layoutX="343.0" layoutY="573.0" onAction="#handleSave" prefHeight="51.0" prefWidth="642.0" text="Зберегти">
      <graphic>
         <ImageView fitHeight="40.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Icons/save_icon.png" />
            </image>
         </ImageView>
      </graphic></Button>
   <Label layoutX="36.0" layoutY="140.0" prefHeight="26.0" prefWidth="178.0" text="Введіть назву туру" />
   <Label layoutX="36.0" layoutY="226.0" text="Введіть місце призначення" />
   <Label layoutX="37.0" layoutY="313.0" text="Введіть ціну, грн" />
   <Label layoutX="37.0" layoutY="400.0" text="Введіть кількість днів" />
