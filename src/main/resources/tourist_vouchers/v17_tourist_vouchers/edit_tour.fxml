<AnchorPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tourist_vouchers.v17_tourist_vouchers.controller.EditTourController">

    <Label layoutX="402.0" layoutY="34.0" style="-fx-font-size: 20; -fx-font-weight: bold;" styleClass="header-label" text="Інформація про тур" />

    <TextField fx:id="txtTitle" layoutX="270.0" layoutY="134.0" prefHeight="38.0" prefWidth="192.0" promptText="Назва туру" />
    <TextField fx:id="txtDestination" layoutX="270.0" layoutY="220.0" prefHeight="38.0" prefWidth="192.0" promptText="Місце призначення" />
    <TextField fx:id="txtPrice" layoutX="270.0" layoutY="307.0" prefHeight="38.0" prefWidth="192.0" promptText="Ціна" />
    <TextField fx:id="txtDays" layoutX="270.0" layoutY="394.0" prefHeight="38.0" prefWidth="192.0" promptText="Кількість днів" />

    <ComboBox fx:id="cmbTransportType" layoutX="537.0" layoutY="185.0" prefHeight="42.0" prefWidth="422.0" promptText="Транспорт" />
    <ComboBox fx:id="cmbFoodType" layoutX="537.0" layoutY="352.0" prefHeight="42.0" prefWidth="421.0" promptText="Харчування" />
