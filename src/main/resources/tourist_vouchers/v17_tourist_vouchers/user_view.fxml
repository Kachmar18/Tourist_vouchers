<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: #dcf5fb;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tourist_vouchers.v17_tourist_vouchers.controller.UserController">
   <MenuBar>
      <Menu mnemonicParsing="false" text="Програма">
         <MenuItem fx:id="menuExit" mnemonicParsing="false" onAction="#handleMenuExit" text="Вихід" />
      </Menu>
   </MenuBar>
   <Pane prefHeight="206.0" prefWidth="800.0">
      <Button layoutX="779.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleApplyFilter" prefHeight="119.0" prefWidth="207.0" text="Застосувати фільтр" />
      <Button layoutX="779.0" layoutY="152.0" mnemonicParsing="false" onAction="#handleResetFilter" prefHeight="47.0" prefWidth="207.0" text="Скинути" />
      <Label layoutX="6.0" layoutY="15.0" prefHeight="25.0" prefWidth="184.0" text="Місце призначення" />
      <ComboBox fx:id="cmbDestination" layoutX="190.0" layoutY="7.0" prefHeight="38.0" prefWidth="184.0" />
      <Label layoutX="8.0" layoutY="61.0" prefHeight="25.0" prefWidth="160.0" text="Тип туру" />
      <ComboBox fx:id="cmbTourType" layoutX="190.0" layoutY="54.0" prefHeight="38.0" prefWidth="184.0" />
      <Label layoutX="8.0" layoutY="109.0" prefHeight="25.0" prefWidth="160.0" text="Транспорт" />
      <ComboBox fx:id="cmbTransportType" layoutX="190.0" layoutY="102.0" prefHeight="38.0" prefWidth="184.0" />
      <Label layoutX="424.0" layoutY="15.0" prefHeight="25.0" prefWidth="143.0" text="Харчування" />
      <ComboBox fx:id="cmbFoodType" layoutX="580.0" layoutY="9.0" prefHeight="38.0" prefWidth="184.0" />
      <Label layoutX="424.0" layoutY="61.0" prefHeight="25.0" prefWidth="151.0" text="Кількість днів" />
      <Label layoutX="424.0" layoutY="109.0" prefHeight="25.0" prefWidth="121.0" text="Ціна до:" />
      <TextField fx:id="txtDays" layoutX="580.0" layoutY="56.0" prefHeight="34.0" prefWidth="184.0" />
      <TextField fx:id="txtPrice" layoutX="580.0" layoutY="103.0" prefHeight="37.0" prefWidth="184.0" />
      <Label layoutX="8.0" layoutY="166.0" prefHeight="25.0" prefWidth="345.0" text="Пошук за ключовим словом" />
      <TextField fx:id="txtKeyWord" layoutX="322.0" layoutY="160.0" onAction="#onSearchByKeyword" prefHeight="37.0" prefWidth="444.0" promptText="Пошук за ключовим словом" />
   </Pane>
   <TableView fx:id="tblTours" prefHeight="310.0" prefWidth="1000.0">
      <columns>
         <TableColumn fx:id="titleCol" prefWidth="75.0" text="Назва" />
         <TableColumn fx:id="destinationCol" prefWidth="75.0" text="Призначення" />
         <TableColumn fx:id="priceCol" prefWidth="75.0" text="Ціна" />
         <TableColumn fx:id="daysCol" prefWidth="75.0" text="Дні" />
         <TableColumn fx:id="transport_typeCol" prefWidth="75.0" text="Транспорт" />
         <TableColumn fx:id="food_typeCol" prefWidth="75.0" text="Їжа" />
         <TableColumn fx:id="tour_typeCol" prefWidth="75.0" text="Тип" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
   <HBox alignment="TOP_CENTER" prefHeight="37.0" prefWidth="800.0" spacing="60.0">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
      <Button mnemonicParsing="false" onAction="#handleBtnClearSelectedTour" style="-fx-background-color: #d56839; -fx-font-size: 17;" text="Скасувати бронювання">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></Button>
      <Button mnemonicParsing="false" onAction="#handleBtnSelectedTour" prefHeight="47.0" prefWidth="274.0" style="-fx-background-color: #dca142; -fx-font-size: 17;" text="Обраний тур" />
      <Button mnemonicParsing="false" onAction="#handleBtnBooking" prefHeight="44.0" prefWidth="334.0" style="-fx-background-color: #3fcfa8; -fx-font-size: 17;" text="Замовити тур">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Button>
   </HBox>
</VBox>
